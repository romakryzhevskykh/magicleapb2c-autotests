<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite1" parallel="tests">
    <test name="LoginSuite">
        <parameter name="browserName" value="chrome"/>
        <classes>
            <class name="com.sarnova.cucumber.LoginSuite"/>
        </classes>
    </test>
    <test name="MyAccountMenu">
        <parameter name="browserName" value="chrome"/>
        <classes>
            <class name="com.sarnova.cucumber.MyAccountMenuSuit"/>
        </classes>
    </test>
    <test name="Supply lists, user management, add to cart and checkout functionality">
        <parameter name="browserName" value="chrome"/>
        <classes>
            <class name="com.sarnova.cucumber.UserManagementSuite"/>
            <class name="com.sarnova.cucumber.PermissionsSuite"/>
            <class name="com.sarnova.cucumber.AddToSupplyListSuite"/>
            <class name="com.sarnova.cucumber.SupplyListsFunctionalitySuit"/>
            <class name="com.sarnova.cucumber.AddToCartSuite"/>
            <class name="com.sarnova.cucumber.CheckoutSuite"/>
            <class name="com.sarnova.cucumber.AddToSupplyListFromCartSuit"/>
        </classes>
    </test>
</suite>
