<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite1" parallel="tests">
    <test name="LoginSuite">
        <parameter name="browserName" value="chrome" />
        <classes>
            <class name="com.sarnova.cucumber.LoginSuite"/>
        </classes>
    </test>
    <test name="Add to Supply list">
        <parameter name="browserName" value="chrome" />
        <classes>
            <class name="com.sarnova.cucumber.AddToSupplyListSuite"/>
        </classes>
    </test>
    <test name="Add to cart and checkout suite">
        <parameter name="browserName" value="chrome" />
        <classes>
            <class name="com.sarnova.cucumber.AddToCartSuite"/>
            <class name="com.sarnova.cucumber.CheckoutSuite"/>
        </classes>
    </test>
</suite>
