<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.2.xsd
	">

    <bean id="seleniumGridSettings" class="com.template.helpers.SeleniumGridSettings">
        <constructor-arg value="${hub.url}"/>
    </bean>

    <bean id="storefrontProject" class="com.template.storefront.models.TemplateStorefront">
        <constructor-arg value="${com.template.storefront.base.url}"/>
    </bean>

    <bean id="storefrontShopperCredentials" class="com.template.helpers.user_engine.UserCredentials">
        <constructor-arg value="${com.template.storefront.shopper.username}"/>
        <constructor-arg value="${com.template.storefront.shopper.password}"/>
        <constructor-arg value="${com.template.storefront.shopper.name}"/>
        <constructor-arg value="${com.template.storefront.shopper.role}"/>
    </bean>

    <bean id="storefrontGuestCredentials" class="com.template.helpers.user_engine.UserCredentials">
        <constructor-arg value="${com.template.storefront.guest.username}"/>
        <constructor-arg value="${com.template.storefront.guest.password}"/>
        <constructor-arg value="${com.template.storefront.guest.name}"/>
        <constructor-arg value="${com.template.storefront.guest.role}"/>
    </bean>

    <bean id="backofficeProject" class="com.template.hybris.backoffice.models.TemplateBackoffice">
        <constructor-arg value="${com.template.backoffice.base.url}"/>
    </bean>

    <bean id="backofficeAdminCredentials" class="com.template.helpers.user_engine.UserCredentials">
        <constructor-arg value="${com.template.backoffice.admin.username}"/>
        <constructor-arg value="${com.template.backoffice.admin.password}"/>
        <constructor-arg value="${com.template.backoffice.admin.name}"/>
        <constructor-arg value="${com.template.backoffice.admin.role}"/>
    </bean>

    <bean id="hacProject" class="com.template.hybris.hac.models.TemplateHAC">
        <constructor-arg value="${com.template.hac.base.url}"/>
    </bean>

    <bean id="hacAdminCredentials" class="com.template.helpers.user_engine.UserCredentials">
        <constructor-arg value="${com.template.hac.admin.username}"/>
        <constructor-arg value="${com.template.hac.admin.password}"/>
        <constructor-arg value="${com.template.hac.admin.name}"/>
        <constructor-arg value="${com.template.hac.admin.role}"/>
    </bean>

    <bean id="importCockpitProject" class="com.template.hybris.import_cockpit.models.TemplateImportCockpit">
        <constructor-arg value="${com.template.import.cockpit.base.url}"/>
    </bean>

    <bean id="importCockpitImportManagerCredentials" class="com.template.helpers.user_engine.UserCredentials">
        <constructor-arg value="${com.template.import.cockpit.import.manager.username}"/>
        <constructor-arg value="${com.template.import.cockpit.import.manager.password}"/>
        <constructor-arg value="${com.template.import.cockpit.import.manager.name}"/>
        <constructor-arg value="${com.template.import.cockpit.import.manager.role}"/>
    </bean>


    <bean id="userCredentialsList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="storefrontShopperCredentials"/>
                <ref bean="storefrontGuestCredentials"/>
                <ref bean="backofficeAdminCredentials"/>
                <ref bean="hacAdminCredentials"/>
                <ref bean="importCockpitImportManagerCredentials"/>
            </list>
        </constructor-arg>
    </bean>

    <!-- ====================================================== -->
    <!-- import different variables according to active profile -->
    <!-- ====================================================== -->
    <beans profile="stage">
        <context:property-placeholder
                ignore-resource-not-found="true"
                location="classpath*:META-INF/stage.properties, classpath*:META-INF/selenium_grid.properties"/>
    </beans>

    <beans profile="dev">
        <context:property-placeholder
                ignore-resource-not-found="true"
                location="classpath*:META-INF/dev.properties, classpath*:META-INF/selenium_grid.properties"/>
    </beans>
</beans>