<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.2.xsd
	">

    <bean id="seleniumGridSettings" class="com.template.helpers.SeleniumGridSettings">
        <constructor-arg value="${hub.url}"/>
    </bean>

    <bean id="storefrontProject" class="com.template.storefront.models.TemplateStorefront">
        <constructor-arg value="${com.template.storefront.base.url}"/>
    </bean>

    <bean id="storefrontShopperCredentials" class="com.template.helpers.user_engine.User">
        <constructor-arg value="${com.template.storefront.shopper.username}"/>
        <constructor-arg value="${com.template.storefront.shopper.password}"/>
        <constructor-arg ref="storefrontProject"/>
        <constructor-arg value="${com.template.storefront.shopper.role}"/>
    </bean>

    <bean id="storefrontAdminCredentials" class="com.template.helpers.user_engine.User">
        <constructor-arg value="${com.template.storefront.admin.username}"/>
        <constructor-arg value="${com.template.storefront.admin.password}"/>
        <constructor-arg ref="storefrontProject"/>
        <constructor-arg value="${com.template.storefront.admin.role}"/>
    </bean>

    <bean id="backofficeProject" class="com.template.hybris.backoffice.models.TemplateBackoffice">
        <constructor-arg value="${com.template.backoffice.base.url}"/>
    </bean>


    <bean id="usersList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="storefrontShopperCredentials"/>
                <ref bean="storefrontAdminCredentials"/>
            </list>
        </constructor-arg>
    </bean>

    <!-- ====================================================== -->
    <!-- import different variables according to active profile -->
    <!-- ====================================================== -->
    <beans profile="qa">
        <context:property-placeholder
                ignore-resource-not-found="true"
                location="classpath*:META-INF/qa.properties, classpath*:META-INF/selenium_grid.properties"/>
    </beans>

    <beans profile="dev">
        <context:property-placeholder
                ignore-resource-not-found="true"
                location="classpath*:META-INF/dev.properties, classpath*:META-INF/selenium_grid.properties"/>
    </beans>
</beans>