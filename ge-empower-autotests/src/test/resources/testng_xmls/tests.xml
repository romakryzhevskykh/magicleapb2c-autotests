        <parameter name="browserName" value="chrome"/>
        <parameter name="headless" value="false"/>
        <classes>
            <class name="com.geempower.cucumber.AccountManagementSuite"/>
            <class name="com.geempower.cucumber.ManageUsersSuite"/>
            <class name="com.geempower.cucumber.ReturnsSuite"/>
            <class name="com.geempower.cucumber.RebatesSuite"/>
            <class name="com.geempower.cucumber.SpecialPricingSuite"/>
            <class name="com.geempower.cucumber.NotificationCenterSuite"/>
        </classes>
    </test>
    <test name="Suite2">
        <parameter name="browserName" value="chrome"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="com.geempower.cucumber.ShipmentSuite"/>
            <class name="com.geempower.cucumber.OrdersSuite"/>
            <class name="com.geempower.cucumber.SavedItemsSuite"/>
            <class name="com.geempower.cucumber.InvoiceSuite"/>
            <class name="com.geempower.cucumber.ProfileSuite"/>
            <class name="com.geempower.cucumber.MyCartSuite"/>
        </classes>
    </test>
    <test name="Suite3">
        <parameter name="browserName" value="chrome"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="com.geempower.cucumber.DashboardSuite"/>
            <class name="com.geempower.cucumber.ProductsSuite"/>
        </classes>
    </test>
</suite>